---
import BaseHead from "../components/BaseHead.astro";
import Hero from "../components/Hero.astro";
import ToogleDarkBtn from "../components/ToggleDarkBtn.astro";
import Footer from "../components/Footer.astro";
import DarkBg from "../components/DarkBg.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Skills from "../components/Skills.astro";
import BtnToTop from "../components/BtnToTop.astro";

import Divider1 from "../components/Dividers/Divider1.astro";
import Divider2 from "../components/Dividers/Divider2.astro";
import Divider3 from "../components/Dividers/Divider3.astro";
import Divider4 from "../components/Dividers/Divider4.astro";
import Tools from "../components/Tools.astro";
import AboutHome from "../components/AboutHome.astro";
import PortfolioSection from "../components/PortfolioSection.astro";
import PostSection from "../components/PostSection.astro";
import NavHome from "../components/Navs/NavHome.astro";
---

<!doctype html>
<html lang="en" class="dark-mode">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link rel="preload" href="../components/BaseHead.astro" as="script" />
    <link rel="preload" href="../components/Hero.astro" as="script" />
    <link rel="preload" href="../components/ToggleDarkBtn.astro" as="script" />
    <link rel="preload" href="../components/Footer.astro" as="script" />
    <link rel="preload" href="../components/DarkBg.astro" as="script" />
    <link rel="preload" href="../components/Skills.astro" as="script" />
    <link rel="preload" href="../components/BtnToTop.astro" as="script" />
    <link
      rel="preload"
      href="../components/Dividers/Divider1.astro"
      as="script"
    />
    <link
      rel="preload"
      href="../components/Dividers/Divider2.astro"
      as="script"
    />
    <link
      rel="preload"
      href="../components/Dividers/Divider3.astro"
      as="script"
    />
    <link
      rel="preload"
      href="../components/Dividers/Divider4.astro"
      as="script"
    />
    <link rel="preload" href="../components/Tools.astro" as="script" />
    <link rel="preload" href="../components/AboutHome.astro" as="script" />
    <link
      rel="preload"
      href="../components/PortfolioSection.astro"
      as="script"
    />
    <link rel="preload" href="../components/PostSection.astro" as="script" />
    <link rel="preload" href="../components/Navs/NavHome.astro" as="script" />
  </head>
  <body>
    <NavHome />
    <ToogleDarkBtn />
    <BtnToTop />
    <main>
      <Hero />
      <DarkBg />
      <Divider1 />
      <Skills />
      <Divider2 />
      <Divider3 />
      <AboutHome />
      <PortfolioSection />
      <Divider4 />
    </main>
    <Footer />
  </body>
</html>
